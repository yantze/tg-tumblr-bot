{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}
